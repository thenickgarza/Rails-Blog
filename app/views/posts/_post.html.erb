<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.content %>
  </p>


    <div>
      <strong>Comment:</strong>
    <% post.comments.each do |post| %>
     <p><%=  post.content %></p>
    <% end %>
  </div>

</div>
